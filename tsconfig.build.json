{
  "compilerOptions": {
    "outDir": "dist/types",
    "module": "esnext",
    "declaration": true, // generate .d.ts file for every .ts file
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/setupTests.ts",
  ]
}
